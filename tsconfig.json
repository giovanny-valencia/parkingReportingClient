{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "src",
    "strict": true,
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@common/*": [
        "common/*"
      ],
      "@features/*": [
        "features/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app.config.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "_refactor"
  ]
}
