{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "src",
    "strict": true,
    "paths": {
      "@app/*": ["app/*"],
      "@assets/*": ["assets/*"],
      "@common/*": ["common/*"],
      "@features/*": ["features/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["_refactor"]
}
